# editorconfig.org -- For unifying the coding style between editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{json,yml}]
insert_final_newline = false
indent_size = 2

[.{bowerrc,editorconfig,gitattributes,gitignore,htaccess,npmrc}]
insert_final_newline = false
indent_size = 2